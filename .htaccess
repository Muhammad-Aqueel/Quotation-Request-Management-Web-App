# Deny direct access to config file
<Files "config.php">
  Order allow,deny
  Deny from all
</Files>

# Prevent access to install after setup (optional, comment out during testing)
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteCond %{REQUEST_URI} ^/install/
  RewriteRule ^.* - [F,L]
</IfModule>

# Redirect 403 errors to custom 403.php
ErrorDocument 403 /quotation-app/403.php

# Redirect 404 errors to custom 404.php
ErrorDocument 404 /quotation-app/404.php

# Disable directory listing
Options -Indexes
